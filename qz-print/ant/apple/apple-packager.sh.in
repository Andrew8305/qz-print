#!/bin/bash
###############################################################################
#                         ${socket.name} Apple OS X Packager                         #
###############################################################################
#  Description:                                                               #
#    1. Packages software into an Apple pkg installer                         #
#                                                                             #
#  Depends:                                                                   #
#    pkgbuild                                                                 #
#                                                                             #
#  Usage:                                                                     #
#    $ chmod +x apple-packager.sh                                             #
#    $ ./apple-packager.sh                                                    #
#                                                                             #
###############################################################################
echo
echo "============================================"
echo "            Packaging ${socket.name}"
echo "============================================"
echo
chmod +x "${apple.installer.out}"
pkgbuild --root "${dist.socket.dir}" "${build.socket.name}-${build.version}.pkg"
code=$?
echo
echo "============================================"
echo "                 Finished                   "
echo "============================================"
echo
exit $code
