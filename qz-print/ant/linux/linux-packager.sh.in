#!/bin/bash
###############################################################################
#                         ${socket.name} Linux Packager                              #
###############################################################################
#  Description:                                                               #
#    1. Packages software for Linux self extracting archive and installer     #
#                                                                             #
#  Depends:                                                                   #
#    makeself (sudo apt-get install makeself)                                 #
#                                                                             #
#  Usage:                                                                     #
#    $ chmod +x linux-packager.sh                                             #
#    $ ./linux-packager.sh                                                    #
#                                                                             #
###############################################################################
echo
echo "============================================"
echo "            Packaging ${socket.name}"
echo "============================================"
echo
makeself "${dist.socket.dir}" "${build.socket.name}-${build.version}.run" "${socket.name} Installer" "./${build.install.name}"
code=$?
echo
echo "============================================"
echo "                 Finished                   "
echo "============================================"
echo
exit code